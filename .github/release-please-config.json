{
  "separate-pull-requests": true,
  "pull-request-title-pattern": "chore(repo): üöÄ Release ${component} ${version}",
  "pull-request-header": "I've created a release pull request!",
  "always-update": true,
  "force-tag-creation": true,
  "include-v-in-tag": false,
  "include-v-in-release-name": false,
  "extra-label": "release",
  "draft": true,
  "draft-pull-request": true,
  "prerelease": false,
  "release-search-depth": 100,
  "commit-search-depth": 200,
  "exclude-paths": [
    "*/README.md",
    "README.md",
    ".github/README.md",
    "manifest.json",
    ".github/dependabot.yml"
  ],
  "packages": {
    "cleanuparr": {
      "release-type": "simple",
      "package-name": "Cleanuparr",
      "component": "cleanuparr",
      "changelog-path": "CHANGELOG.md",
      "exclude-paths": [
        "README.md"
      ],
      "extra-files": [
        {
          "type": "yaml",
          "path": "config.yaml",
          "jsonpath": "$.version"
        },
        {
          "type": "yaml",
          "path": "build.yaml",
          "jsonpath": "$.labels['org.opencontainers.image.version']"
        }
      ]
    },
    "huntarr": {
      "release-type": "simple",
      "package-name": "Huntarr",
      "component": "huntarr",
      "changelog-path": "CHANGELOG.md",
      "exclude-paths": [
        "README.md"
      ],
      "extra-files": [
        {
          "type": "yaml",
          "path": "config.yaml",
          "jsonpath": "$.version"
        },
        {
          "type": "yaml",
          "path": "build.yaml",
          "jsonpath": "$.labels['org.opencontainers.image.version']"
        }
      ]
    },
    "profilarr": {
      "release-type": "simple",
      "package-name": "Profilarr",
      "component": "profilarr",
      "changelog-path": "CHANGELOG.md",
      "exclude-paths": [
        "README.md"
      ],
      "extra-files": [
        {
          "type": "yaml",
          "path": "config.yaml",
          "jsonpath": "$.version"
        },
        {
          "type": "yaml",
          "path": "build.yaml",
          "jsonpath": "$.labels['org.opencontainers.image.version']"
        }
      ]
    },
    "romm": {
      "release-type": "simple",
      "package-name": "Romm",
      "component": "romm",
      "changelog-path": "CHANGELOG.md",
      "exclude-paths": [
        "README.md"
      ],
      "extra-files": [
        {
          "type": "yaml",
          "path": "config.yaml",
          "jsonpath": "$.version"
        },
        {
          "type": "yaml",
          "path": "build.yaml",
          "jsonpath": "$.labels['org.opencontainers.image.version']"
        }
      ]
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "‚ú® Features"
    },
    {
      "type": "fix",
      "section": "üêõ Bug Fixes"
    },
    {
      "type": "chore",
      "section": "üß∞ Maintenance",
      "hidden": true
    },
    {
      "type": "docs",
      "section": "üìö Documentation"
    },
    {
      "type": "refactor",
      "section": "‚ôªÔ∏è Refactoring"
    },
    {
      "type": "perf",
      "section": "‚ö° Performance"
    },
    {
      "type": "test",
      "section": "‚úÖ Tests"
    },
    {
      "type": "build",
      "section": "üèóÔ∏è Build System"
    },
    {
      "type": "ci",
      "section": "üë∑ Continuous Integration"
    }
  ],
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
